@model WebApplication2.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li>Genre: @Model.Genre.Name</li>
    @*<li>Release Date: @Model.Genre.ReleaseDate.ToString("MM/dd/yyyy")</li>*@
    <li>Date Added: @Model.Genre.DateAdded.ToString("MM/dd/yyyy")</li>
    <li>Number in Stock: @Model.Genre.Stock</li>

</ul>

